package GUIFrame;

import java.awt.Color;

import javax.swing.JFrame;

import GUIComponent.SimpleJFrame;
import GUIComponent.SimpleTextArea;

/**
 * JFrame for Login
 * Have two textView
 * @author DongKyu
 */

public class LoginFrame extends SimpleJFrame{
	private SimpleTextArea idTextArea;
	private SimpleTextArea passwordTextArea;
	

	public LoginFrame(String frameName, int width, int height) {
		super(frameName, width, height);
		getContentPane().setBackground(new Color(230, 230, 230));

		idTextArea = new SimpleTextArea("ID");
		passwordTextArea = new SimpleTextArea("PASSWORD");
		
		this.add(idTextArea);
		
	}
	
	public static void main (String args[]) {
		LoginFrame frame = new LoginFrame("·Î±×ÀÎ", 300, 200);
		
	}

}
